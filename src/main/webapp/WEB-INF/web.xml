<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!-- пара ключей-->
  <servlet>
    <servlet-name>login</servlet-name> <!-- имя сервлета -->
    <servlet-class>org.example.servlets.LoginServlet</servlet-class>  <!--класс созданий в scr в нашей логике, пакет Сервлеты-->
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>  <!--имя сервлета-->
    <url-pattern>/login</url-pattern> <!--его ссылка-->
  </servlet-mapping>

</web-app>


